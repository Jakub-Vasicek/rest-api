{
    "name": "jakvas/rest-api",
    "description": "Basic REST API",
    "type": "project",
    "authors": [
        {
            "name": "Jakub Vašíček"
        }
    ],
    "require": {
        "php": "^8.3",
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "doctrine/orm": "^3.3",
        "doctrine/migrations": "^3.8",
        "php-di/slim-bridge": "^3.4",
        "symfony/cache": "^7.2",
        "ramsey/uuid-doctrine": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "phpstan/phpstan": "^1.11",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "JakVas\\Application\\": "src/"
        }
    },
    "scripts": {
        "app-phpstan-max": "phpstan analyse -l max -c phpstan.neon",
        "app-test-phpunit-unit": "phpunit -c phpunit.xml --testsuit \"unit\""
    }
}
